#!/bin/bash
#mejoras 1
# Script to convert all mage files from a directory (parameter) into png format file
# it also reduces size

# Sanity checks ?
# ...

# Main code
#Sanity checks
if [$# -ne 1]
then
	echo "wrong script"
	echo "write:./imgkonvert_mejoras.sh ../imagenesCambio 1|2|3"
	exit 1
fi

ls -1 $1/*.jpg > imagefiles
cat imagefiles
while read imgfile 
do
	1)
		lengthname=${#imgfile}
		namefile=${imgfile:0:$lengthname-4} 
		convert "$1/imgfile" -resize 200x200 "$namefile".png	
		;;
	2)
		lengthname=${#imgfile}
		namefile=${imgfile:0:$lengthname-4}
		convert "$1/imgfile" -resize 200x300 "$namefile".png
		;;
	3)
		lengthname=${#imgfile}
		namefile=${imgfile:0:$lengthname-4}
		convert "$1/imafile" -resize 300x300 "$namefile".png
		;;
	*)
		echo "wrong selection"
		;;
esac imagefiles
rm imagefiles
exit 0
